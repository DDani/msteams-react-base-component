{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "ES5",
      "ES2015",
      "DOM"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": false,
    "types": [
      "@microsoft/teams-js"
    ]
  }
}